{# Modifier Examples #}
<div class="flx --flxColumn --gap-50 --pY-50">
  <section>
    <h2>Modifier Examples</h2>
    <div class="flx --flxColumn --gap-30">
      <!-- Basic Modifier -->
      <div>
        <h3>Basic Modifier</h3>
        <div class="flx --flxRow --gap-10">
          <div class="--p-10 --bgColor-primary --txtColor-light">Default</div>
          <div class="--p-10 --bgColor-primary --txtColor-light --opacity-50">With --opacity-50</div>
        </div>
      </div>

      <!-- Conditional Modifiers -->
      <div>
        <h3>Conditional Modifiers</h3>
        <div class="flx --flxRow --gap-10">
          <div class="--p-10 --bgColor-dark1 --shadow">Default Shadow</div>
          <div class="--p-10 --bgColor-dark1 --theme-light --shadow">Shadow with --theme-light</div>
        </div>
      </div>

      <!-- Responsive Modifiers -->
      <div>
        <h3>Responsive Modifiers</h3>
        <div class="flx --flxColumn --gap-10">
          <div class="--p-10 --bgColor-primary --txtColor-light --display-none:md">Hidden on medium screens and up</div>
          <div class="--p-10 --bgColor-success --txtColor-light --display-none --display-block:md">Visible only on medium screens and up</div>
        </div>
      </div>
    </div>
  </section>
</div>
