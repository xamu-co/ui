<link href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" rel="stylesheet">
   {% set positions = [
 {name: '--position-top-left', icon: 'down'},
 {name: '--position-top-right', icon: 'down'},
 {name: '--position-top-center', icon: 'down'},
 {name: '--position-right-top', icon: 'left'},
 {name: '--position-right-bottom', icon: 'left'},
 {name: '--position-right-center', icon: 'left'},
 {name: '--position-bottom-left', icon: 'up'},
 {name: '--position-bottom-right', icon: 'up'},
 {name: '--position-bottom-center', icon: 'up'},
 {name: '--position-left-top', icon: 'right'},
 {name: '--position-left-bottom', icon: 'right'},
 {name: '--position-left-center', icon: 'right'}
] %}
   <div class="flx --flxColumn --flx-center --pY-100">
      <ul class="list --gapingY-25">
         {% for position in positions %}
            <li class="--p-5 --bgColor-dark1">
               <a href="#" class="toggle--dropdown link --txtStyle --txtTransform">
                  <span>.{{ position.name }}</span>
                  <i class="icon fa-chevron-{{ position.icon }} fas"></i>
               </a>
               <ul class="dropdown {{ position.name }} flx --flxColumn --flx-start --gapY-5">
                  {% for link in['aguacate', 'cereza', 'platano'] %}
                     <li>
                        <a href="#" class="link">{{ link }}</a>
                     </li>
                  {% endfor %}
               </ul>
            </li>
         {% endfor %}
      </ul>
   </div>