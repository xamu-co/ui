<div class="flx --flxColumn --gap-50 --pY-50">
  <!-- Basic Grid Examples -->
  <section>
    <h2>Basic Grid Columns</h2>
    <div class="flx --flxColumn --gap-20">
      <div>
        <h3>Auto-fit with min column size (18rem)</h3>
        <div class="grd --grdColumns --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 5) %}
            <div class="grd-item --p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <div>
        <h3>Auto-fit with min column size (6rem)</h3>
        <div class="grd --grdColumns-autoMin --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 9) %}
            <div class="grd-item --p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <div>
        <h3>Auto-fit without min size</h3>
        <div class="grd --grdColumns-auto --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 6) %}
            <div class="grd-item --p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <div>
        <h3>Auto-fill without min size</h3>
        <div class="grd --grdColumns-autoFill --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 7) %}
            <div class="grd-item --p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <div>
        <h3>Single Column</h3>
        <div class="grd --grdColumns-single --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 4) %}
            <div class="grd-item --p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <div>
        <h3>Fixed Columns (4 columns)</h3>
        <div class="grd --grdColumns-4 --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 13) %}
            <div class="grd-item --p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <!-- Void Examples -->
  <section>
    <h2>Void Layouts</h2>
    <div class="flx --flxColumn --gap-30">
      <div>
        <h3>Left Void (1:1 proportion)</h3>
        <div class="grd --grdVoidLeft --gap-10 --p-10 --bgColor-dark1">
          <div class="--p-10 --bgColor-primary --txtColor-light">Content</div>
          <div class="--p-10 --bgColor-secondary9 --txtColor-light">Void</div>
        </div>
      </div>

      <div>
        <h3>Left Void (1:4 proportion)</h3>
        <div class="grd --grdVoidLeft-1-4 --gap-10 --p-10 --bgColor-dark1">
          <div class="--p-10 --bgColor-primary --txtColor-light">Content</div>
          <div class="--p-10 --bgColor-secondary9 --txtColor-light">Void</div>
        </div>
      </div>

      <div>
        <h3>Right Void (1:1 proportion)</h3>
        <div class="grd --grdVoidRight --gap-10 --p-10 --bgColor-dark1">
          <div class="--p-10 --bgColor-secondary9 --txtColor-light">Void</div>
          <div class="--p-10 --bgColor-primary --txtColor-light">Content</div>
        </div>
      </div>

      <div>
        <h3>Right Void (4:1 proportion)</h3>
        <div class="grd --grdVoidRight-4-1 --gap-10 --p-10 --bgColor-dark1">
          <div class="--p-10 --bgColor-secondary9 --txtColor-light">Void</div>
          <div class="--p-10 --bgColor-primary --txtColor-light">Content</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Grid Item Spanning -->
  <section>
    <h2>Item Spanning</h2>
    <div class="flx --flxColumn --gap-20">
      <div>
        <h3>Default Span (2 columns)</h3>
        <div class="grd --grdColumns-4 --gap-10 --p-10 --bgColor-dark1">
          <div class="grd-item --grdColumnSpan --p-10 --bgColor-primary --txtColor-light">Span 2</div>
          <div class="grd-item --p-10 --bgColor-primary --txtColor-light">1</div>
          <div class="grd-item --p-10 --bgColor-primary --txtColor-light">2</div>
        </div>
      </div>

      <div>
        <h3>Custom Span (3 columns)</h3>
        <div class="grd --grdColumns-4 --gap-10 --p-10 --bgColor-dark1">
          <div class="grd-item --grdColumnSpan-3 --p-10 --bgColor-primary --txtColor-light">Span 3</div>
          <div class="grd-item --p-10 --bgColor-primary --txtColor-light">1</div>
        </div>
      </div>
    </div>
  </section>
</div>
