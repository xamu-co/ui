{# Flexbox Examples #}
<div class="flx --flxColumn --gap-50 --pY-50">
  <!-- Basic Flex Directions -->
  <section>
    <h2>Flex Directions</h2>
    <div class="flx --flxColumn --gap-30">
      <!-- Row Direction -->
      <div>
        <h3>Row Direction (Default)</h3>
        <div class="flx --flxRow --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 4) %}
            <div class="--p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <!-- Row Reverse -->
      <div>
        <h3>Row Reverse</h3>
        <div class="flx --flxRowReverse --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 4) %}
            <div class="--p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <!-- Column Direction -->
      <div>
        <h3>Column Direction</h3>
        <div class="flx --flxColumn --gap-10 --p-10 --bgColor-dark1" style="height: 200px;">
          {% for i in range(1, 4) %}
            <div class="--p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <!-- Column Reverse -->
      <div>
        <h3>Column Reverse</h3>
        <div class="flx --flxColumnReverse --gap-10 --p-10 --bgColor-dark1" style="height: 200px;">
          {% for i in range(1, 4) %}
            <div class="--p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <!-- Wrapping -->
  <section>
    <h2>Wrapping</h2>
    <div class="flx --flxColumn --gap-30">
      <!-- Row Wrap -->
      <div>
        <h3>Row with Wrap</h3>
        <div class="flx --flxRow-wrap --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 9) %}
            <div class="--p-10 --bgColor-primary --txtColor-light" style="min-width: 150px;">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>

      <!-- Column Wrap -->
      <div>
        <h3>Column with Wrap</h3>
        <div class="flx --flxColumn-wrap --gap-10 --p-10 --bgColor-dark1" style="height: 300px;">
          {% for i in range(1, 9) %}
            <div class="--p-10 --bgColor-primary --txtColor-light" style="height: 80px;">Item {{ i }}</div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <!-- Responsive Flex -->
  <section>
    <h2>Responsive Flex</h2>
    <div class="flx --flxColumn --gap-30">
      <div>
        <h3>Responsive Direction</h3>
        <div class="flx --flxColumn:sm --flxRow:md --gap-10 --p-10 --bgColor-dark1">
          {% for i in range(1, 5) %}
            <div class="--p-10 --bgColor-primary --txtColor-light">Item {{ i }}</div>
          {% endfor %}
        </div>
        <p class="--mT-10">Changes from column on mobile to row on medium screens and up</p>
      </div>
    </div>
  </section>
</div>
