{
   "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "target": "ES2020",
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "allowJs": true,
      "isolatedModules": true,
      "strict": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist/esm",
      "rootDir": "src",
      "verbatimModuleSyntax": true,
      "types": [
         "node"
      ],
      "lib": [
         "ESNext",
         "ESNext.AsyncIterable",
         "DOM"
      ],
      "typeRoots": [
         "../../node_modules/@types",
         "node_modules/@types"
      ]
   },
   "include": [
      "*.d.ts",
      "./src/**/*"
   ],
   "exclude": [
      "node_modules",
      "dist",
   ]
}